@model HomeViewModel

<partial name="_Carousel" />

<div class="text-center mt-4">
    <img src="~/Images/bethanys-pie-shop-logomark.png" class="logo-mark mx-auto mb-3" style="height:200px;" alt="Bethany's Pie Shop Logo" />
    <h1>Pies of the Week</h1>
    <h5>Enjoy a weekly selection of our favorite pies</h5>

    <div class="row pies-of-the-week g-4">
        @foreach (var pie in Model.PieOfTheWeek)
        {
            <partial name="_Piecard" model="pie" />
        }
    </div>
</div>
